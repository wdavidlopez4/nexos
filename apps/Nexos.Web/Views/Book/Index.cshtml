@using Nexos.Web.Models
@model Book

@{
    ViewData["Title"] = "index";
}

<div class="form-row">
    <div class="col-md-12">
        <form method="post" asp-controller="Book" asp-action="Index" class="form-group">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!--Id-->
            <div class="form-group">
                <label asp-for="AuthorName" class="control-label">nombre autor</label>
                <input asp-for="AuthorName" type="text" class="form-control" />
                <span asp-validation-for="AuthorName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Title" class="control-label">titulo libro</label>
                <input asp-for="Title" type="text" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="container">
                <div class="row">
                    <!--enviar formulario-->
                    <div class="col-sm">
                        <input type="submit" value="consultar" class="btn btn-outline-dark" />
                    </div>
                    <!--regresar a la lista de mensajes-->
                    <div class="col-sm">
                        <a class="btn btn-outline-dark" asp-area="" asp-controller="Home" asp-action="Index">Cancelar</a>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>
